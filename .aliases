#!/bin/zsh

# base
alias cd="nocorrect cd"
alias cp="nocorrect cp -i"
alias gcc="nocorrect gcc"
alias ln="nocorrect ln -i"
alias man="nocorrect man"
alias mkdir="nocorrect mkdir -p"
alias mv="nocorrect mv -i"
alias rm="nocorrect rm -i"
alias sl="ls"

# Replace the default software
type htop > /dev/null 2>&1 && alias top="htop"
type rg > /dev/null 2>&1 && alias -g grep="rg"
type cw > /dev/null 2>&1 && alias -g wc="cw"
type fd > /dev/null 2>&1 && alias find="fd"
type exa > /dev/null 2>&1 && alias -g ls="exa"

# utils
type exa > /dev/null 2>&1 && alias tree="exa -T"
alias reload="exec $SHELL -l"
alias c="code"
alias lh="localhost"
alias rtmp="rm -rf $HOME/tmp && mkdir $HOME/tmp"

# utils global aliases
alias -g G="| grep"
alias -g C="| pbcopy"
alias -g H="| head"
alias -g T="| tail"
alias -g L="| lv"

# docker
alias d="docker"
alias drt="docker run --rm -it"
alias dc="docker-compose"

# cargo-compete
alias cac="cargo compete"
alias ccs="cargo compete submit"
alias ccn="cargo compete new"
alias cct="cargo compete test"
alias cco="cargo compete open"
alias ccd="cargo compete download"

# Poetry
alias -g poer="poetry run"
alias -g poep="poetry run python"
alias -g poes="poetry shell"
alias -g poej="poetry run jupyter lab"

# git
alias ga="git add"
alias gc="git commit"
alias gf="git fetch"
alias gm="git merge"
alias gb="git branch"
alias gd="git diff"
alias gl="git log"
alias gps="git push"
alias gpl="git pull"
alias gsw="git switch"
alias gst="git status"
alias grs="git restore"
alias glo="git log --oneline"
alias gaa="git add -A"
alias gcm="git commit -m"
alias gca="git commit --amend"
alias grhh="git reset --hard HEAD"
alias grall="git add -A && git reset --hard HEAD"
alias gpsuom="git push -u origin main"

alias hc="hub create"
alias hb="hub browse"

# lab jupyter lab
# Usage: sjlab fvcrc-1
# Detach: Ctrl-j -> d
# Attach: screen -r lab
# Finish: Ctrl-d
alias -g labjupyter="ssh -L 9999:localhost:9999 lab -t ssh -L 9999:localhost:9999"
alias sjlab="screen -S lab labjupyter"

# ls
alias ll="ls -lh"
alias la="ls -a"
alias lla="ls -lah"

# cd
alias cdm="cd $HOME/ghq/github.com/moisutsu"
alias cdp="cd $HOME/ghq/github.com/moisutsu-playground"
alias cdd="cd $HOME/dotfiles"
alias ..="cd .."
alias ...="cd ../.."
alias ....="cd ../../.."
