" base settings
set fenc=utf-8
set nobackup
set noswapfile
set autoread
set hidden
set showcmd

" display settings
set number
set smartindent
set showmatch
set laststatus=2
set wildmode=list:longest
nnoremap j gj
nnoremap k gk
syntax enable

" Tab settings
set list listchars=tab:\â–¸\-
set expandtab

" Clipboard settings
set clipboard+=unnamed

" No beep
set belloff=all
