#! /bin/bash

# playgroundでリポジトリを作成
function hcp () {
    local CURRENT_DIR=`basename $(pwd)`
    hub create moisutsu-playground/$CURRENT_DIR
}

function localhost () {
    open http://localhost:$1
}

# make playground repository
function mkpr () {
    if [ $# -eq 1 ]; then
        cdp
        mkdcd $1
        git init
        hcp
    fi
}

# Search the repository managed by ghq with fzf and `cd`
function ghq_repo_search_with_fzf () {
    local selected_dir
    selected_dir=$(ghq list -p | fzf --reverse --query "$LBUFFER")
    if [ -n "$selected_dir" ]; then
        BUFFER="cd ${selected_dir}"
        zle accept-line
    fi
    zle clear-screen
}
zle -N ghq_repo_search_with_fzf
bindkey '^]' ghq_repo_search_with_fzf

# Search command history with fzf
function history_search_with_fzf () {
    BUFFER=$(history -n 1 | tail -r | awk '!a[$0]++' | fzf --reverse)
    CURSOR=$#BUFFER
    zle reset-prompt
}
zle -N history_search_with_fzf
bindkey '^R' history_search_with_fzf


# Downloadsディレクトリの最新のファイルをカレントディレクトリに移動
function mvdl () {
    local file=`\ls -t $HOME/Downloads | head -1`
    if [ $# -eq 1 ]; then
        mv $HOME/Downloads/$file `pwd`/$1
    else
        mv $HOME/Downloads/$file `pwd`
    fi
}

# Add a file that will automatically execute cargo fmt on commit.
function pre-commit-cargo-fmt () {
    echo "
#\!/bin/sh

cargo fmt

for FILE in \`git diff --staged --name-only\`; do
    git add \$FILE
done
    " > pre-commit
    chmod 755 pre-commit
    mv pre-commit .git/hooks/pre-commit
}

function pbnorm () {
    local clip_board=`pbpaste`
    local norm_text=`python -c "print(\"\"\"${clip_board}\"\"\".replace(\"-\\n\", \" \").replace(\"\\n\", \" \").replace(\"- \", \" \"))"`
    echo $norm_text | pbcopy
}
